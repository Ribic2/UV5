<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="TextView"
                        android:fontFamily="@font/opensans_bold" android:textSize="32sp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/passenger_name_and_surname"/>
            </LinearLayout>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" android:id="@+id/passenger_age"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" android:id="@+id/passenger_residency" android:layout_weight="1"/>
            </LinearLayout>
            <Button
                    android:text="Remove passenger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/delete_passenger_button"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>